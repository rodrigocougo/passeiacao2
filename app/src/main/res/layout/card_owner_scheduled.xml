<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdvCardOwnerScheduled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAvatarOwnerScheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar_example" />

            <TextView
                android:id="@+id/lblTitleCardOwnerScheduled"
                style="@style/LabelProfileMenuExtra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="Ricardo Augusto Severo"
                android:textColor="@color/colorDark00"
                app:layout_constraintBottom_toBottomOf="@+id/imgAvatarOwnerScheduled"
                app:layout_constraintEnd_toStartOf="@+id/lblHighlighterOwnerScheduled"
                app:layout_constraintStart_toEndOf="@+id/imgAvatarOwnerScheduled"
                app:layout_constraintTop_toTopOf="@+id/imgAvatarOwnerScheduled" />

            <TextView
                android:id="@+id/lblSubTitleCardOwnerScheduled"
                style="@style/LabelProfileMenuSubItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Ricardo Augusto Severo"
                android:textColor="@color/colorDark03"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/lblHighlighterOwnerScheduled"
                app:layout_constraintStart_toEndOf="@+id/imgAvatarOwnerScheduled"
                app:layout_constraintTop_toBottomOf="@+id/lblTitleCardOwnerScheduled" />

            <TextView
                android:id="@+id/lblHighlighterOwnerScheduled"
                style="@style/LabelHighlighter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="●  Enviado\ninteresse"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/lblLinkOwnerScheduled"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblLinkOwnerScheduled"
                style="@style/LabelLinks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="START"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imvIconPlace"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imvIconPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_place" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>