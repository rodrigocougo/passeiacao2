<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdvCardOwnerDogs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAvatarOwnerDogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar_example" />

            <TextView
                android:id="@+id/lblTitleCardOwnerDogs"
                style="@style/LabelProfileMenuExtra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:text="Ricardo Augusto Severo"
                android:textColor="@color/colorDark00"
                app:layout_constraintBottom_toBottomOf="@+id/imgAvatarOwnerDogs"
                app:layout_constraintEnd_toStartOf="@+id/imgIconOwnerDogs"
                app:layout_constraintStart_toEndOf="@+id/imgAvatarOwnerDogs"
                app:layout_constraintTop_toTopOf="@+id/imgAvatarOwnerDogs" />

            <TextView
                android:id="@+id/lblSubTitleCardOwnerDogs"
                style="@style/LabelProfileMenuSubItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Ricardo Augusto Severo"
                android:textColor="@color/colorDark03"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/imgIconOwnerDogs"
                app:layout_constraintStart_toEndOf="@+id/imgAvatarOwnerDogs"
                app:layout_constraintTop_toBottomOf="@+id/lblTitleCardOwnerDogs" />

            <ImageView
                android:id="@+id/imgIconOwnerDogs"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_info" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>